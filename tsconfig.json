{
  "compilerOptions": {
    "target": "es2016", 
    "module": "commonjs", 
    "outDir": "./build", 
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["node"],
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts", 
    "src/types/*.d.ts"  // Cambiar esta l√≠nea
],
  "exclude": [
    "node_modules"
  ]
}
