<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <form action="/tasks/edit?id={{task.id}}"  method="POST">
                    <!-- Mostrar mensaje de error si existe -->
                    {{#if errorMessage}}
                        <div class="alert alert-danger">
                            {{errorMessage}}
                        </div>
                    {{/if}}

                    <div class="form-group mb-3">
                       <input type="text" name="title" value="{{task.title}}" placeholder="Write your title" class="form-control" autofocus>
                    </div>

                    <div class="form-group mb-3">
                       <input type="text" name="description" value="{{task.description}}" placeholder="Write a description" class="form-control">
                    </div>
                    
                    <div class="form-group mb-3">
                    <label for="status">Status</label>
                        <select name="status" class="form-control" required>
                            <option value="pending" {{#if (eq task.status "pending")}}selected{{/if}}>Pending</option>
                            <option value="in progress" {{#if (eq task.status "in progress")}}selected{{/if}}>In Progress</option>
                                <option value="completed" {{#if (eq task.status "completed")}}selected{{/if}}>Completed</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-success btn-block">
                        Save
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
