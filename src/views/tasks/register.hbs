<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <h1 class="text-center mb-4">Crear Cuenta</h1>
                <form action="/tasks/register" method="POST">
                    <!-- Mostrar mensaje de error si existe -->
                    {{#if errorMessage}}
                        <div class="alert alert-danger">
                            {{errorMessage}}
                        </div>
                    {{/if}}

                    <div class="form-group mb-3">
                        <input type="text" name="username" placeholder="Nombre de usuario" class="form-control" required>
                    </div>

                    <div class="form-group mb-3">
                        <input type="password" name="password" placeholder="Contraseña" class="form-control" required>
                    </div>

                    <button type="submit" class="btn btn-success btn-block">
                        Registrar
                    </button>
                </form>
                <p class="text-center mt-3">¿Ya tienes una cuenta? <a href="/tasks/login">Inicia sesión aquí</a></p>
            </div>
        </div>
    </div>
</div>