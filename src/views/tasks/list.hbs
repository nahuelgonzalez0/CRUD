<div class="row">
    {{#each tasks as |task|}}
    <div class="col-md-3 mb-3">
        <div class="card">
            <div class="card-body">
                <h3>{{task.title}}</h3> <!-- AsegÃºrate de referenciar correctamente las propiedades -->
                <p>{{task.description}}</p>
                <p>Status: <strong>{{task.status}}</strong></p> <!-- Agregado para mostrar el estado -->
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center">
                <a href="/tasks/delete?id={{task.id}}" class="btn btn-danger"> <!-- Incluye el ID en la URL -->
                    Delete
                </a>
                <a href="/tasks/edit?id={{task.id}}" class="btn btn-secondary">
                    Edit
                </a>
            </div>
        </div>
    </div>
    {{/each}}
</div>
