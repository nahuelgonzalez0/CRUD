<div class="row">
    {{#each tasks as |task|}}
    <div class="col-md-3 mb-3">
        <div class="card">
            <div class="card-body">
                <h3>{{title}}</h3>
                <p>{{description}}</p>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center">
                <a href="/tasks/delete?id={{task.id}}" class="btn btn-danger"> <!-- Incluye el ID en la URL -->
                    Delete
                </a>
                <a href="/tasks/edit?id={{task.id}}" class="btn btn-secondary">
                    Edit
                </a>
            </div>
        </div>
    </div>
    {{/each}}
</div>
